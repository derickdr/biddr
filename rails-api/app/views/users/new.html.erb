<h1>Register a new account!</h1>

<%= form_for (User.new) do |f| %>

    <div>
        <%=f.label :name %>
        <%=f.text_field :name %>
    </div>
    <div>
        <%=f.label :password %>
        <%=f.password_field :password %>
    </div>
    <div>
        <%=f.label :password_confirmation %>
        <%=f.password_field :password_confirmation %>
    </div>

    <%= f.submit "Sign Up" %>
    
<% end %>